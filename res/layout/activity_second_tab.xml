<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/sunday" 
               />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact2" />

            <ImageView
                android:id="@+id/imageView2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:adjustViewBounds="true"
                android:src="@drawable/saturday" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact3" />

            <ImageView
                android:id="@+id/imageView3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:adjustViewBounds="true"
                android:src="@drawable/friday" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact4" />

            <ImageView
                android:id="@+id/imageView4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:adjustViewBounds="true"
                android:src="@drawable/thursday" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact5" />

            <ImageView
                android:id="@+id/imageView5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:adjustViewBounds="true"
                android:src="@drawable/wednesday" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact6" />

            <ImageView
                android:id="@+id/imageView6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:adjustViewBounds="true"
                android:src="@drawable/tuesday" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact7" />

            <ImageView
                android:id="@+id/imageView7a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:adjustViewBounds="true"
                android:src="@drawable/monday" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7a"
                android:adjustViewBounds="true"
                android:src="@drawable/fact8" />

            <ImageView
                android:id="@+id/shop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/shop"
                android:clickable="true"
                android:onClick="goToRayGun" />

            <ToggleButton
                android:id="@+id/favorite1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_toRightOf="@+id/imageView6a"
                android:background="@drawable/star" 
                android:textOn=""
        		android:textOff="" />

            <ImageView
                android:id="@+id/share1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/shop1"
                android:clickable="true"
                android:onClick="share"
                android:src="@drawable/share" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>